        xmlns:local="clr-namespace:Project_4"
        mc:Ignorable="d"
        Title="Login" Height="500" Icon="C:\DATA\Summa ICT\Leerjaar 2\Project 4\DD\Project 4\Project 4\Img\pizzzzaaaaaaa.jfif" Width="300" WindowStartupLocation="CenterScreen" >
