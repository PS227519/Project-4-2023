            <StackPanel Orientation="Horizontal" Width="120px" Height="20px" Margin="0,0,0,0" VerticalAlignment="Bottom" >
                <Button Click="Back_Click" Background="Gray" FontWeight="Bold" >Back</Button>
                <Button Click="Login_Click" Margin="54,0,0,0" Background="Gray" FontWeight="Bold" >Login</Button>
            </StackPanel>
           
        </Grid>
        
    </Grid>
